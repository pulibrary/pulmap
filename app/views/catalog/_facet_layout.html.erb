
<div class="facet dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="<%= facet_field_label(facet_field.key).downcase.gsub(/[^a-z1-9]+/, '-').chomp('-') %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    <small><%= link_to facet_field_label(facet_field.key), "#", :"data-no-turbolink" => true %></small>
    <% if facet_field_in_params?(facet_field.key) %>
      <% if facet_params(facet_field.key).length == 1 %>
        <%= facet_params(facet_field.key).first %>
      <% else %>
        Multiple (<%= facet_params(facet_field.key).length %>)
      <% end %>
    <% else %>
      <%= all_facet_values_label(facet_field.key) %>
    <% end %>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="<%= facet_field_label(facet_field.key).downcase.gsub(/[^a-z1-9]+/, '-').chomp('-') %>">
     <%= yield %>
   </ul>
 </div>
