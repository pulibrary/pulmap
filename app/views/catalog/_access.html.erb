<% document ||= @document %>
<% if document.same_institution? %>
  <% if !document.downloadable? && document.viewer_endpoint.empty? && user_signed_in? %>
    <%= link_to('Request offline access', '/contact-us') %>
  <% elsif document.restricted? && !user_signed_in? %>
    <%= link_to t('geoblacklight.tools.login_to_view'), user_cas_omniauth_authorize_path, method: :post %>
  <% end %>
<% end %>
