<div class="l-branding__pul">
  <div class="<% unless index_layout? %>container<% end %> <%= layout_type %>-container ">
    <div class="col-xs-12 col-sm-4">
      <%= link_to root_path, class: "logo__pul" do %>
        <%= image_tag("pul-logo-maps.png") %>
      <% end %>
    </div>

    <% if index_layout? %>
      <div class="col-xs-12 col-sm-12 col-md-4">
        <%= render :partial=>'catalog/search_form_index' %>
      </div>

      <div class="col-xs-12 col-sm-12 col-md-1">
        <ul class="search-options">
          <li>
            <%= link_to 'Advanced Search', blacklight_advanced_search_engine.advanced_search_path(search_state.to_h), :class=>'advanced_search'%>
          </li>
        </ul>
      </div>
    <% end %>

    <div class="pull-right menu--level-1 col-xs-12 col-sm-3">
      <ul>
        <li><a href="/contact-us">Contact Us</a></li>
        <%= render :partial=>'/account' %>
      </ul>
    </div>
  </div>
</div>
